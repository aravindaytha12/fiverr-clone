<%= render 'shared/category-nav' %>
<section id="search_bar">
  <div class="container-fluid px-5">
    <div class="row">
      <div class="col-sm-12 col-md-12 col-lg-3">
        <p class="h4 pb-2 underline">Price Range</p>
        <div class="pt-2">
          <%= search_form_for @q, url: category_services_path do |f| %> 
            <span>
              <%= f.label "$" %>
              <%= f.number_field :packages_price_gteq %>
              to
              <%= f.label "$" %>
              <%= f.number_field :packages_price_lteq %>
              <%= f.button :submit, 'Check', class: 'btn-outline-success pl-2' %>
            </span>
          <% end %>
        </div>
      </div>
      <div class="col"></div>
      <div class="col-sm-12 col-md-12 col-lg-8">
        <div class="row">
          <% @services.each do |service| %>
            <div class="col-xl-4 col-lg-6 col-md-6 col-sm-6 p-3">
              <div class="card">
                <%= link_to image_tag("http://www.lorempixel.com/400/200/sports/2", class: 'card-img-top img-fluid', alt: "https://via.placeholder.com/400/200"), service_path(service) %>
                <!--<img class="card-img-top img-fluid" src="http://www.lorempixel.com/400/200/sports/2" alt="Card img cap">-->
                <div class="card-body">
                  <h5 class="card-title text-truncate text-capitalize">
                    <%= service.title %>
                  </h5>
                  <p><%= image_tag service.seller.avatar, size: '50x50', class: 'rounded-circle' %><span class="pl-3"><%= service.seller.name %></span></p>
                  <p class="card-text text-truncate">
                    <%= service.description %>
                  </p>
                </div> 
                <div class="card-footer">
                  <i class="fa fa-heart"></i>
                  <span><%= service.favorited_users.size %></span>
                  <span class="float-right small">STARTING AT <span class="h5">$<%= service.standard_price %></span></span>
                </div>    
              </div>   
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>